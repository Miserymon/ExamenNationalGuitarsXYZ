<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/tibal"
    android:padding="16dp"
    tools:context=".Menu">

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:background="@color/azulmar"
        android:fontFamily="@string/common_google_play_services_install_title"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_invt"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:backgroundTint="#040040"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:text="Inventario"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_mqtt"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="114dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="118dp"
        android:text="MQTT"
        android:backgroundTint="#040040"
        android:textColor="@color/white"
        android:textSize="20sp" />
</RelativeLayout>